<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SketchOverlay.MainPage">
    <Grid>
        <Label x:Name="debugLabel"/>
        <GraphicsView x:Name="canvas"/>

        <HorizontalStackLayout HorizontalOptions="Center" VerticalOptions="Start">
            <Button x:Name="lineBrush"  Text="line"/>
            <Button x:Name="rectangleBrush"  Text="rect"/>
        </HorizontalStackLayout>

        <VerticalStackLayout HorizontalOptions="End" VerticalOptions="Start">
            <Button x:Name="undoButton" Text="undo"/>
            <Button x:Name="redoButton" Text="redo"/>
            <Button x:Name="clearButton" Text="clear"/>
        </VerticalStackLayout>

    </Grid>
</ContentPage>
