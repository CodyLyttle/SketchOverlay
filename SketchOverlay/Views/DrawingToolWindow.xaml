<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:SketchOverlay.Models"
             xmlns:viewModels="clr-namespace:SketchOverlay.ViewModels"
             x:Class="SketchOverlay.Views.DrawingToolWindow"
             HeightRequest="300"
             WidthRequest="300"
             HorizontalOptions="Start"
             VerticalOptions="Start"
             x:DataType="viewModels:DrawingToolWindowViewModel">
    <ContentView.BindingContext>
        <viewModels:DrawingToolWindowViewModel/>
    </ContentView.BindingContext>
    <Border Background="#222222"
            Stroke="Green">
        <VerticalStackLayout>
            <CollectionView x:Name="DrawingToolsCollection"
                            ItemsSource="{Binding DrawingTools}"
                            SelectedItem="{Binding SelectedDrawingTool}"
                            ItemSizingStrategy="MeasureFirstItem"
                            SelectionMode="Single"
                            HorizontalOptions="Center">
                <!-- Strange behaviour when trying to create a simple horizontal list collection.
                     For some reason VerticalGrid is the only layout which gives the desired result.
                     Is this because the CollectionView is contained within a VerticalStackLayout? -->
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical"/>
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:DrawingToolInfo">
                        <Border ToolTipProperties.Text="{Binding Name}" 
                                Stroke="#222222" 
                                Background="#333333"
                                HeightRequest="40"
                                WidthRequest="40">
                            <Image Source="{Binding Icon}"/>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <CollectionView x:Name="DrawingColorsCollection"
                            ItemsSource="{Binding DrawingColors}"
                            SelectedItem="{Binding SelectedDrawingColor, Mode=TwoWay}"
                            ItemSizingStrategy="MeasureFirstItem"
                            SelectionMode="Single"
                            HorizontalOptions="Center">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical"/>
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="Color">
                        <Rectangle Fill="{Binding}"
                                   WidthRequest="24"
                                   HeightRequest="24"/>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- TODO: Add label displaying slider value -->
            <Slider x:Name="drawSizeSlider" WidthRequest="240" 
                    Minimum="{Binding MinimumDrawingSize}" 
                    Maximum="{Binding MaximumDrawingSize}" 
                    Value="{Binding SelectedDrawingSize, Mode=OneWayToSource}"/>

            <HorizontalStackLayout  HorizontalOptions="Center">
                <Button x:Name="redButton" Background="Red"/>
                <Button x:Name="greenButton" Background="Green"/>
                <Button x:Name="blueButton" Background="Blue"/>
            </HorizontalStackLayout>

            <HorizontalStackLayout HorizontalOptions="Center">
                <Button x:Name="brushToolButton"  Text="brush"/>
                <Button x:Name="lineToolButton"  Text="line"/>
                <Button x:Name="rectangleToolButton"  Text="rect"/>
            </HorizontalStackLayout>

            <HorizontalStackLayout HorizontalOptions="Center">
                <Button x:Name="undoButton" Text="undo" Command="{Binding UndoCommand}"/>
                <Button x:Name="redoButton" Text="redo" Command="{Binding RedoCommand}"/>
                <Button x:Name="clearButton" Text="clear" Command="{Binding ClearCommand}"/>
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </Border>
</ContentView>